<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddTaskActivity">

    <Button
        android:id="@+id/button_back_add_task"
        android:layout_width="51dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="40dp"
        android:background="@android:color/transparent"
        android:drawableRight="@drawable/icon_back_3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/top_bg_logo_add_task"
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        android:background="@drawable/bgsecond"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:layout_width="184dp"
        android:layout_height="51dp"
        android:gravity="left|center_vertical"
        android:paddingStart="20dp"
        android:paddingLeft="7dp"
        android:text="Add new task"
        android:textColor="#892587"
        android:textSize="23sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/top_bg_logo_add_task"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/button_back_add_task"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.518" />

    <ImageView
        android:id="@+id/logo_add_task"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:src="@drawable/logo"
        app:layout_constraintBottom_toBottomOf="@+id/top_bg_logo_add_task"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"

        app:layout_constraintStart_toEndOf="@+id/button_back_add_task"
        app:layout_constraintTop_toTopOf="@+id/top_bg_logo_add_task" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="657dp"
        android:background="#C31CA3D4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/top_bg_logo_add_task"
        app:layout_constraintVertical_bias="0.0">

        <EditText
            android:id="@+id/edt_task_content"
            android:layout_width="360dp"
            android:layout_height="wrap_content"

            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="52dp"
            android:hint="Nhiệm vụ"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/edt_task_due_date"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edt_task_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"
            android:hint="Ngày hết hạn" />

        <Button
            android:id="@+id/bt_task_add_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edt_task_due_date"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="29dp"
            android:layout_marginRight="29dp"
            android:background="@android:color/transparent"
            android:text="SAVE"
            android:textAllCaps="false"
            android:textColor="@android:color/black"
            android:textSize="16dp" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ChartFragment">

    <ImageView
        android:id="@+id/top_bg_logo"
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        android:background="@drawable/bgsecond"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/chart_layout_name"
        android:layout_width="184dp"
        android:layout_height="51dp"
        android:gravity="left|center_vertical"
        android:paddingStart="20dp"
        android:paddingLeft="7dp"
        android:text="Chart"
        android:textColor="#892587"
        android:textSize="23sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/top_bg_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.518" />

    <ImageView
        android:id="@+id/logo_chart"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_marginBottom="32dp"
        android:src="@drawable/logo"

        app:layout_constraintBottom_toBottomOf="@+id/top_bg_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.845"
        app:layout_constraintStart_toStartOf="@id/chart_layout_name"
        app:layout_constraintTop_toTopOf="@+id/top_bg_logo"
        app:layout_constraintVertical_bias="1.0" />


    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="548dp"
        android:stretchColumns="1, 2, 3, 4"
        android:layout_margin="8dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_bg_logo"
        app:layout_constraintVertical_bias="0.0">
        <TableRow>
            <TextView
                android:text="Mục"
                android:textSize="16sp"
                android:textColor="#892587"
                android:gravity="center"
                android:padding="10dp"
                android:layout_column="1" />
            <TextView
                android:text="Tháng 2"
                android:textSize="16sp"
                android:textColor="#892587"
                android:gravity="center"
                android:padding="10dp"
                android:layout_column="1"/>
            <TextView
                android:text="Tháng 3"
                android:textSize="16sp"
                android:textColor="#892587"
                android:gravity="center"
                android:padding="10dp"
                android:layout_column="1"/>
            <TextView
                android:text="Tháng 4"
                android:textSize="16sp"
                android:textColor="#892587"
                android:gravity="center"
                android:padding="10dp"
                android:layout_column="1"/>

        </TableRow>
        <TableRow>
            <TextView
                android:text="Chi tiêu"
                android:textStyle="italic"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:gravity="center"
                android:padding="10dp"
                android:layout_column="1" />
            <TextView
                android:text="Tháng 2"
                android:textSize="16sp"
                android:textColor="@color/gray"
                android:gravity="center"
                android:padding="10dp"
                android:layout_column="1"/>
            <TextView
                android:text="Tháng 3"
                android:textSize="16sp"
                android:textColor="@color/gray"
                android:gravity="center"
                android:padding="10dp"
                android:layout_column="1"/>
            <TextView
                android:text="Tháng 4"
                android:textSize="16sp"
                android:textColor="@color/gray"
                android:gravity="center"
                android:padding="10dp"
                android:layout_column="1"/>

        </TableRow>
        <TableRow>
            <TextView
                android:text="Tiền điện"
                android:textStyle="italic"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:gravity="center"
                android:padding="10dp"
                android:layout_column="1" />
            <TextView
                android:text="Tháng 2"
                android:textSize="16sp"
                android:textColor="@color/gray"
                android:gravity="center"
                android:padding="10dp"
                android:layout_column="1"/>
            <TextView
                android:text="Tháng 3"
                android:textSize="16sp"
                android:textColor="@color/gray"
                android:gravity="center"
                android:padding="10dp"
                android:layout_column="1"/>
            <TextView
                android:text="Tháng 4"
                android:textSize="16sp"
                android:textColor="@color/gray"
                android:gravity="center"
                android:padding="10dp"
                android:layout_column="1"/>

        </TableRow>
        <TableRow>
            <TextView
                android:text="Tiền nước"
                android:textStyle="italic"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:gravity="center"
                android:padding="10dp"
                android:layout_column="1" />
            <TextView
                android:text="Tháng 2"
                android:textSize="16sp"
                android:textColor="@color/gray"
                android:gravity="center"
                android:padding="10dp"
                android:layout_column="1"/>
            <TextView
                android:text="Tháng 3"
                android:textSize="16sp"
                android:textColor="@color/gray"
                android:gravity="center"
                android:padding="10dp"
                android:layout_column="1"/>
            <TextView
                android:text="Tháng 4"
                android:textSize="16sp"
                android:textColor="@color/gray"
                android:gravity="center"
                android:padding="10dp"
                android:layout_column="1"/>

        </TableRow>
    </TableLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
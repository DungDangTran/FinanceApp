<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SummaryActivity"
    android:id="@+id/summaryActivity">


    <Button
        android:id="@+id/button_back_summary"
        android:layout_width="51dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="36dp"
        android:background="@android:color/transparent"
        android:drawableRight="@drawable/icon_back_3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/top_bg_logo_summary"
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        android:background="@drawable/bgsecond"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/summary_layout"
        android:layout_width="184dp"
        android:layout_height="51dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="36dp"
        android:gravity="left|center_vertical"
        android:paddingStart="20dp"
        android:paddingLeft="7dp"
        android:text="Summary"
        android:textColor="#892587"
        android:textSize="23sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/button_back_summary"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/logo_summary"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"

        android:layout_marginBottom="32dp"
        android:src="@drawable/logo"
        app:layout_constraintBottom_toBottomOf="@+id/top_bg_logo_summary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.845"
        app:layout_constraintStart_toEndOf="@+id/summary_layout"
        app:layout_constraintTop_toTopOf="@+id/top_bg_logo_summary"
        app:layout_constraintVertical_bias="0.892" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="639dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_bg_logo_summary">

        <RelativeLayout
            android:id="@+id/total"
            android:layout_width="match_parent"
            android:layout_height="73dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="-1dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:background="#2AF4F4">

            <TextView
                android:id="@+id/tv_sum_money"
                android:layout_width="175dp"
                android:layout_height="58dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="11dp"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="4dp"
                android:gravity="left|center_vertical"
                android:paddingStart="20dp"
                android:paddingLeft="7dp"
                android:text="Tổng tiền đã chi: "
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/tv_total_money"
                android:layout_width="193dp"
                android:layout_height="60dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="9dp"
                android:layout_marginRight="9dp"
                android:layout_marginBottom="9dp"
                android:gravity="left|center_vertical"
                android:paddingStart="20dp"
                android:paddingLeft="20dp"
                android:text="@string/app_name"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="204dp"
            android:layout_height="90dp"
            android:layout_below="@+id/total"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:background="#E3E66271">

            <TextView
                android:id="@+id/tv_you"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:text="Dũng chi"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/tv_dung_money"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_below="@+id/tv_you"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="3dp"
                android:gravity="center"
                android:text="@string/app_name"
                android:textColor="#31E831"
                android:textSize="20sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="204dp"
            android:layout_height="90dp"
            android:layout_below="@+id/total"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="0dp"
            android:background="#2AB4F4">

            <TextView
                android:id="@+id/tv_friend"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:text="Trung Anh chi"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/tv_anh_money"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_below="@+id/tv_friend"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:text="@string/app_name"
                android:textColor="#FF0000"
                android:textSize="20sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_tanh_pay"
            android:layout_width="122dp"
            android:layout_height="43dp"
            android:layout_below="@+id/tv_dung_pay"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="1dp"
            android:gravity="left|center"
            android:text="T Anh trả"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_money_tanh_pay"
            android:layout_width="146dp"
            android:layout_height="46dp"
            android:layout_below="@+id/tv_money_dung_pay"
            android:layout_marginStart="49dp"
            android:layout_marginLeft="49dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/tv_tanh_pay"
            android:layout_toRightOf="@+id/tv_tanh_pay"
            android:gravity="left|center"
            android:text="0 đ"
            android:textColor="@color/black"
            android:textSize="19sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_money_house"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="188dp"
            android:gravity="left|center"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:text="1. Tiền nhà"
            android:textColor="@color/black"
            android:textSize="19sp" />

        <EditText
            android:id="@+id/edt_money_house"
            android:layout_width="142dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="190dp"
            android:layout_marginEnd="45dp"
            android:layout_marginRight="50dp"
            android:hint="Tiền nhà"
            android:inputType="number" />

        <TextView
            android:id="@+id/tv_money_electric"
            android:layout_width="142dp"
            android:layout_height="36dp"
            android:layout_below="@+id/tv_money_house"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="17dp"
            android:gravity="left|center"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:text="2. Tiền điện"
            android:textColor="@color/black"
            android:textSize="19sp" />

        <EditText
            android:id="@+id/edt_electric_number"
            android:layout_width="142dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:layout_below="@+id/tv_money_electric"
            android:layout_alignEnd="@+id/tv_money_electric"
            android:layout_alignRight="@+id/tv_money_electric"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:hint="Số điện" />

        <EditText
            android:id="@+id/edt_electric_money_per_number"
            android:layout_width="142dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edt_money_house"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="47dp"
            android:layout_marginEnd="45dp"
            android:layout_marginRight="45dp"
            android:hint="Đơn giá"
            android:inputType="number" />

        <TextView
            android:id="@+id/tv_money_water"
            android:layout_width="142dp"
            android:layout_height="36dp"
            android:layout_below="@+id/tv_money_electric"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="54dp"
            android:gravity="left|center"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:text="3. Tiền nước"
            android:textColor="@color/black"
            android:textSize="19sp" />

        <EditText
            android:id="@+id/edt_water_number"
            android:layout_width="142dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:layout_below="@+id/tv_money_water"
            android:layout_alignEnd="@+id/tv_money_water"
            android:layout_alignRight="@+id/tv_money_water"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="-1dp"
            android:layout_marginRight="-1dp"
            android:hint="Số nước" />

        <EditText
            android:id="@+id/edt_water_money_per_number"
            android:layout_width="142dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edt_electric_money_per_number"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="43dp"
            android:layout_marginEnd="45dp"
            android:layout_marginRight="45dp"
            android:hint="Đơn giá"
            android:inputType="number" />

        <TextView
            android:id="@+id/tv_money_internet"
            android:layout_width="142dp"
            android:layout_height="36dp"
            android:layout_below="@+id/edt_water_number"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="6dp"
            android:gravity="left|center"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:text="4. Tiền mạng"
            android:textColor="@color/black"
            android:textSize="19sp" />

        <EditText
            android:id="@+id/edt_money_internet"
            android:layout_width="142dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:layout_below="@+id/edt_water_money_per_number"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="45dp"
            android:layout_marginRight="45dp"
            android:hint="Tiền mạng" />

        <Button
            android:id="@+id/btn_tinh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_money_internet"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="148dp"
            android:layout_marginLeft="148dp"
            android:layout_marginTop="26dp"
            android:backgroundTint="#892587"
            android:text="Tính"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tv_money_dung_pay"
            android:layout_width="145dp"
            android:layout_height="49dp"
            android:layout_below="@+id/edt_money_internet"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="63dp"
            android:layout_toEndOf="@+id/tv_dung_pay"
            android:layout_toRightOf="@+id/tv_dung_pay"
            android:gravity="left|center"
            android:text="0 đ"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_dung_pay"
            android:layout_width="129dp"
            android:layout_height="44dp"
            android:layout_below="@+id/tv_money_internet"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="31dp"
            android:layout_marginLeft="31dp"
            android:layout_marginTop="76dp"
            android:background="@android:color/transparent"
            android:text="Dũng trả"
            android:textColor="@color/black"
            android:textSize="20dp" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>